<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/ProgressFragmentCardStyle"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    tools:context="com.geekhaven.covinfo.fragments.util.ProgressDialogFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/imgProgressDialog"
            android:layout_width="@dimen/ProgressFragmentLogoWidth"
            android:layout_height="@dimen/ProgressFragmentLogoHeight"
            android:layout_margin="@dimen/RegularDimen"
            android:src="@drawable/ic_logo"
            app:layout_constraintBottom_toTopOf="@+id/tvProgressDialog"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:contentDescription="@string/ImageContentDescription" />

        <TextView
            android:id="@+id/tvProgressDialog"
            style="@style/ProgressFragmentTextStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/SmallDimen"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imgProgressDialog" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</com.google.android.material.card.MaterialCardView>