<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/bgMeetDevelopers"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="@dimen/RegularDimen"
        android:contentDescription="@string/ImageContentDescription"
        android:src="@drawable/section_card"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imgDeveloper"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/PrimaryDimen"
        android:contentDescription="@string/ImageContentDescription"
        android:src="@drawable/ic_developer"
        app:layout_constraintBottom_toBottomOf="@+id/bgMeetDevelopers"
        app:layout_constraintEnd_toEndOf="@+id/bgMeetDevelopers"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvMeetDeveloperLabel"
        style="@style/SectionTextStyle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/PrimaryDimen"
        android:layout_marginTop="@dimen/SmallDimen"
        android:layout_marginEnd="@dimen/RegularDimen"
        android:text="@string/MeetDeveloperLayoutText"
        app:layout_constraintBottom_toTopOf="@+id/btnMeetDevelopers"
        app:layout_constraintEnd_toStartOf="@+id/imgDeveloper"
        app:layout_constraintStart_toStartOf="@+id/bgMeetDevelopers"
        app:layout_constraintTop_toTopOf="@+id/bgMeetDevelopers" />

    <ImageButton
        android:id="@+id/btnMeetDevelopers"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/SmallDimen"
        android:background="@android:color/transparent"
        android:contentDescription="@string/ImageContentDescription"
        android:src="@drawable/ic_button"
        app:layout_constraintBottom_toBottomOf="@+id/bgMeetDevelopers"
        app:layout_constraintEnd_toEndOf="@+id/tvMeetDeveloperLabel"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/tvMeetDeveloperLabel"
        app:layout_constraintTop_toBottomOf="@id/tvMeetDeveloperLabel"
        tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck" />

</androidx.constraintlayout.widget.ConstraintLayout>