<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Covinfo" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/color_primary</item>
        <item name="colorPrimaryVariant">@color/color_primary_light</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="fontFamily">@font/poppins_medium</item>
    </style>

    <style name="HeadingTextStyle" parent="Theme.Covinfo">
        <item name="fontFamily">@font/poppins_bold</item>
        <item name="android:textSize">28sp</item>
        <item name="android:textColor">@color/color_text</item>
    </style>

    <style name="SectionHeadingTextStyle" parent="Theme.Covinfo">
        <item name="fontFamily">@font/poppins_semibold</item>
        <item name="android:textSize">22sp</item>
        <item name="android:textColor">@color/color_text</item>
    </style>

    <style name="SectionCardStyle" parent="Widget.MaterialComponents.CardView">
        <item name="cardCornerRadius">40dp</item>
        <item name="cardElevation">4dp</item>
        <item name="contentPadding">16dp</item>
    </style>

    <style name="TextButtonStyle" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="fontFamily">@font/poppins_regular</item>
        <item name="android:textColor">@color/color_text</item>
        <item name="android:textSize">16sp</item>
        <item name="textAllCaps">false</item>
        <item name="icon">@drawable/ic_arrow</item>
        <item name="iconTint">@color/color_text</item>
        <item name="iconGravity">textEnd</item>
        <item name="iconPadding">8dp</item>
    </style>

    <style name="SectionTextStyle">
        <item name="fontFamily">@font/poppins_medium</item>
        <item name="android:textColor">@color/color_text</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="InfoCardStyle" parent="Widget.MaterialComponents.CardView">
        <item name="cardCornerRadius">8dp</item>
        <item name="cardElevation">0dp</item>
        <item name="contentPadding">8dp</item>
    </style>

    <style name="ConfirmedCardStyle" parent="InfoCardStyle">
        <item name="cardBackgroundColor">@color/color_red_card</item>
    </style>

    <style name="ActiveCardStyle" parent="InfoCardStyle">
        <item name="cardBackgroundColor">@color/color_blue_card</item>
    </style>

    <style name="RecoveredCardStyle" parent="InfoCardStyle">
        <item name="cardBackgroundColor">@color/color_green_card</item>
    </style>

    <style name="DeceasedCardStyle" parent="InfoCardStyle">
        <item name="cardBackgroundColor">@color/color_grey_card</item>
    </style>

    <style name="InfoCardHeadingStyle">
        <item name="fontFamily">@font/poppins_semibold</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="InfoCardTotalCaseStyle">
        <item name="fontFamily">@font/poppins_medium</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="InfoCardDailyCaseStyle">
        <item name="fontFamily">@font/poppins_regular</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="NewsItemTitle">
        <item name="fontFamily">@font/poppins_medium</item>
        <item name="android:textSize">11sp</item>
        <item name="android:textColor">@color/color_text</item>
    </style>

    <style name="NewsItemDescription">
        <item name="fontFamily">@font/poppins_regular</item>
        <item name="android:textSize">8sp</item>
        <item name="android:textColor">@color/color_text</item>
    </style>

    <style name="NewsItemSourceAndTime">
        <item name="fontFamily">@font/poppins_medium</item>
        <item name="android:textSize">6sp</item>
        <item name="android:textColor">@color/color_text_secondary</item>
    </style>

    <style name="MainHeadingStyle">
        <item name="fontFamily">@font/poppins_bold</item>
        <item name="android:textColor">@color/color_text</item>
        <item name="android:textSize">24sp</item>
    </style>

</resources>