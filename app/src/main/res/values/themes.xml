<resources>

    <style name="Theme.CovInfo" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/color_primary</item>
        <item name="colorPrimaryVariant">@color/color_primary_light</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="fontFamily">@font/poppins_medium</item>
        <item name="android:textColor">@color/color_text</item>
    </style>


    <style name="AppBarStyle" parent="Widget.MaterialComponents.AppBarLayout.Primary">
        <item name="android:background">@color/white</item>
        <item name="elevation">0dp</item>
    </style>

    <style name="HeadingTextStyle" parent="Theme.CovInfo">
        <item name="fontFamily">@font/poppins_extra_bold</item>
        <item name="android:textSize">@dimen/ExtraLargeFontSize</item>
    </style>

    <style name="SubHeadingTextStyle" parent="Theme.CovInfo">
        <item name="android:textSize">@dimen/SmallFontSize</item>
    </style>

    <style name="HeadingLabelStyle" parent="HeadingTextStyle">
        <item name="fontFamily">@font/poppins_bold</item>
    </style>


    <style name="MenuStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu">
        <item name="boxBackgroundColor">@android:color/transparent</item>
        <item name="boxStrokeWidth">0dp</item>
        <item name="boxStrokeWidthFocused">0dp</item>
        <item name="endIconDrawable">@drawable/ic_dropdown_arrow</item>
        <item name="endIconTint">@color/color_text</item>
        <item name="hintEnabled">false</item>
    </style>

    <style name="MainMenuStyle" parent="MenuStyle">
        <item name="android:padding">0dp</item>
        <item name="endIconDrawable">@drawable/ic_arrow_dropdown</item>
        <item name="endIconTint">@color/color_primary</item>
    </style>

    <style name="MainMenuCardStyle" parent="Widget.MaterialComponents.CardView">
        <item name="cardCornerRadius">50dp</item>
        <item name="contentPadding">8dp</item>
    </style>

    <style name="MenuTextStyle" parent="Theme.CovInfo">
        <item name="android:textSize">@dimen/RegularFontSize</item>
        <item name="fontFamily">@font/poppins_semi_bold</item>
        <item name="android:focusableInTouchMode">false</item>
        <item name="android:inputType">none</item>
    </style>

    <style name="RegionMenuTextStyle" parent="MenuTextStyle">
        <item name="android:textColor">@color/color_primary</item>
        <item name="android:padding">0dp</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="RegionMenuDropDownTextStyle" parent="RegionMenuTextStyle">
        <item name="android:textColor">@color/color_text</item>
        <item name="android:padding">8dp</item>
        <item name="android:textAlignment">viewStart</item>
    </style>

    <style name="RangeMenuTextStyle" parent="MenuTextStyle">
        <item name="android:textSize">@dimen/SmallFontSize</item>
    </style>


    <style name="SplashScreenAppNameStyle">
        <item name="fontFamily">@font/poppins_extra_bold</item>
        <item name="android:textSize">@dimen/ExtraExtraLargeFontSize</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textAllCaps">true</item>
    </style>


    <style name="AdviceTextLabelStyle" parent="Theme.CovInfo">
        <item name="fontFamily">@font/poppins_semi_bold</item>
        <item name="android:textSize">@dimen/LargeFontSize</item>
    </style>

    <style name="AdviceTextContentStyle" parent="Theme.CovInfo">
        <item name="fontFamily">@font/poppins_medium</item>
        <item name="android:textSize">@dimen/RegularFontSize</item>
        <item name="android:textAlignment">center</item>
    </style>


    <style name="SectionLabelTextStyle" parent="Theme.CovInfo">
        <item name="fontFamily">@font/poppins_semi_bold</item>
        <item name="android:textSize">@dimen/LargeFontSize</item>
    </style>

    <style name="TextButtonStyle" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="fontFamily">@font/poppins_regular</item>
        <item name="android:textColor">@color/color_text</item>
        <item name="android:textSize">@dimen/RegularFontSize</item>
        <item name="textAllCaps">false</item>
        <item name="android:textAlignment">textEnd</item>
        <item name="icon">@drawable/ic_arrow</item>
        <item name="iconTint">@color/color_text</item>
        <item name="iconGravity">end</item>
        <item name="iconPadding">@dimen/SmallDimen</item>
    </style>

    <style name="SectionTextStyle" parent="Theme.CovInfo">
        <item name="android:textSize">@dimen/RegularFontSize</item>
    </style>


    <style name="InfoCardStyle" parent="Widget.MaterialComponents.CardView">
        <item name="cardCornerRadius">@dimen/SmallDimen</item>
        <item name="cardElevation">0dp</item>
        <item name="contentPadding">@dimen/SmallDimen</item>
    </style>

    <style name="InfoCardHeadingStyle">
        <item name="fontFamily">@font/poppins_semi_bold</item>
        <item name="android:textSize">@dimen/RegularFontSize</item>
    </style>

    <style name="InfoCardTotalCaseStyle">
        <item name="fontFamily">@font/poppins_medium</item>
        <item name="android:textSize">@dimen/MediumFontSize</item>
        <item name="android:textAlignment">viewEnd</item>
    </style>

    <style name="InfoCardDailyCaseStyle">
        <item name="fontFamily">@font/poppins_regular</item>
        <item name="android:textSize">@dimen/SmallFontSize</item>
        <item name="android:textAlignment">viewEnd</item>
    </style>


    <style name="NewsCardStyle" parent="Widget.MaterialComponents.CardView">
        <item name="cardCornerRadius">@dimen/SmallDimen</item>
        <item name="cardElevation">0dp</item>
        <item name="cardBackgroundColor">@color/white</item>
        <item name="contentPadding">@dimen/SmallDimen</item>
        <item name="strokeColor">@color/color_text_light_light</item>
        <item name="strokeWidth">@dimen/NewsCardStrokeWidth</item>
    </style>

    <style name="NewsItemTitle">
        <item name="fontFamily">@font/poppins_medium</item>
        <item name="android:textSize">@dimen/SmallFontSize</item>
        <item name="android:textColor">@color/color_text</item>
    </style>

    <style name="NewsItemDescription">
        <item name="fontFamily">@font/poppins_regular</item>
        <item name="android:textSize">@dimen/SmallSmallFontSize</item>
        <item name="android:textColor">@color/color_text</item>
    </style>

    <style name="NewsItemSourceAndTime">
        <item name="fontFamily">@font/poppins_medium</item>
        <item name="android:textSize">@dimen/SmallSmallFontSize</item>
        <item name="android:textColor">@color/color_text_secondary</item>
    </style>

    <style name="NewsTitleStyle" parent="Theme.CovInfo">
        <item name="fontFamily">@font/poppins_semi_bold</item>
        <item name="android:textSize">@dimen/MediumFontSize</item>
    </style>

    <style name="NewsContentStyle" parent="Theme.CovInfo">
        <item name="android:textColor">@color/color_text_secondary</item>
        <item name="android:textSize">@dimen/SmallFontSize</item>
    </style>

    <style name="NewsLabelStyle" parent="NewsContentStyle">
        <item name="fontFamily">@font/poppins_semi_bold</item>
    </style>

    <style name="ViewArticleBtnStyle" parent="Widget.MaterialComponents.Button">
        <item name="fontFamily">@font/poppins_semi_bold</item>
        <item name="android:padding">@dimen/RegularDimen</item>
        <item name="android:text">@string/ViewFullArticleText</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">@dimen/RegularFontSize</item>
        <item name="cornerRadius">50dp</item>
        <item name="icon">@drawable/ic_open_link</item>
        <item name="iconGravity">end</item>
    </style>


    <style name="ProgressFragmentCardStyle" parent="Widget.MaterialComponents.CardView">
        <item name="android:background">@android:color/transparent</item>
        <item name="cardBackgroundColor">@color/color_primary</item>
        <item name="cardCornerRadius">8dp</item>
        <item name="contentPadding">@dimen/PrimaryDimen</item>
    </style>

    <style name="ProgressFragmentTextStyle" parent="Theme.CovInfo">
        <item name="fontFamily">@font/poppins_bold</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/LargeFontSize</item>
        <item name="android:text">@string/ProgressFragmentText</item>
    </style>


    <style name="TabCardStyle" parent="Widget.MaterialComponents.CardView">
        <item name="cardBackgroundColor">@color/color_primary_light</item>
        <item name="cardCornerRadius">50dp</item>
        <item name="contentPadding">4dp</item>
    </style>

    <style name="TabStyle" parent="Widget.MaterialComponents.TabLayout">
        <item name="android:background">@drawable/tab_background</item>
        <item name="tabBackground">@drawable/tab_background_indicator</item>
        <item name="tabIndicatorHeight">0dp</item>
        <item name="tabTextAppearance">@style/TabItemTextStyle</item>
        <item name="tabTextColor">@color/color_text</item>
    </style>

    <style name="TabItemTextStyle">
        <item name="fontFamily">@font/poppins_semi_bold</item>
        <item name="android:textSize">@dimen/RegularFontSize</item>
        <item name="android:textAllCaps">false</item>
    </style>


    <style name="GraphCardStyle" parent="Widget.MaterialComponents.CardView">
        <item name="cardCornerRadius">16dp</item>
        <item name="cardElevation">0dp</item>
        <item name="contentPadding">4dp</item>
    </style>

    <style name="GraphNotAvailableStyle" parent="Theme.CovInfo">
        <item name="fontFamily">@font/poppins_bold</item>
        <item name="android:textSize">@dimen/RegularFontSize</item>
        <item name="android:text">@string/GraphNotAvailableText</item>
    </style>


    <style name="SearchNameCardStyle" parent="Widget.MaterialComponents.CardView">
        <item name="cardBackgroundColor">@color/color_primary</item>
        <item name="cardCornerRadius">4dp</item>
        <item name="contentPadding">1dp</item>
    </style>

    <style name="SearchNameEditTextStyle">
        <item name="android:background">@drawable/input_background</item>
        <item name="fontFamily">@font/poppins_regular</item>
        <item name="android:hint">@string/SearchNameHint</item>
        <item name="android:inputType">textPersonName</item>
        <item name="android:paddingStart">@dimen/SmallDimen</item>
        <item name="android:paddingEnd">@dimen/SmallDimen</item>
        <item name="android:textColor">@color/color_text</item>
        <item name="android:textSize">@dimen/RegularFontSize</item>
        <item name="android:textCursorDrawable">@color/color_text</item>
        <item name="android:textColorHint">@color/color_text_hint</item>
    </style>

    <style name="StatsListNameStyle" parent="Theme.CovInfo">
        <item name="fontFamily">@font/poppins_semi_bold</item>
        <item name="android:textSize">@dimen/SmallFontSize</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingStart">@dimen/RegularDimen</item>
    </style>

    <style name="StatsListCaseHeadingStyle" parent="StatsListNameStyle">
        <item name="android:textSize">@dimen/SecondarySmallFontSize</item>
        <item name="android:textColor">@color/color_primary</item>
        <item name="android:textAlignment">center</item>
        <item name="android:paddingStart">0dp</item>
    </style>

    <style name="StatsListTotalCaseStyle" parent="StatsListCaseHeadingStyle">
        <item name="fontFamily">@font/poppins_semi_bold</item>
        <item name="android:textSize">@dimen/SecondarySmallFontSize</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="StatsListDailyCaseStyle" parent="StatsListTotalCaseStyle">
        <item name="fontFamily">@font/poppins_medium</item>
        <item name="android:textSize">@dimen/SmallSmallFontSize</item>
    </style>

    <style name="CountryItemCardStyle" parent="Widget.MaterialComponents.CardView">
        <item name="cardBackgroundColor">@color/color_primary_light</item>
        <item name="cardCornerRadius">0dp</item>
        <item name="cardElevation">0dp</item>
        <item name="contentPaddingTop">8dp</item>
        <item name="contentPaddingBottom">8dp</item>
    </style>


    <style name="RegionItemCardStyle" parent="Widget.MaterialComponents.CardView">
        <item name="cardBackgroundColor">@color/color_primary_light</item>
        <item name="cardCornerRadius">8dp</item>
        <item name="cardElevation">0dp</item>
        <item name="contentPadding">16dp</item>
    </style>

    <style name="RegionItemCodeStyle" parent="Theme.CovInfo">
        <item name="fontFamily">@font/poppins_bold</item>
        <item name="android:textSize">@dimen/RegularFontSize</item>
    </style>

    <style name="RegionItemNameStyle" parent="Theme.CovInfo">
        <item name="fontFamily">@font/poppins_regular</item>
        <item name="android:textSize">@dimen/SmallFontSize</item>
    </style>


    <style name="SectionCardStyle" parent="Widget.MaterialComponents.CardView">
        <item name="cardCornerRadius">40dp</item>
        <item name="cardElevation">4dp</item>
        <item name="contentPadding">16dp</item>
    </style>

    <style name="ConfirmedCardStyle" parent="InfoCardStyle">
        <item name="cardBackgroundColor">@color/color_red_card</item>
    </style>

    <style name="ActiveCardStyle" parent="InfoCardStyle">
        <item name="cardBackgroundColor">@color/color_blue_card</item>
    </style>

    <style name="RecoveredCardStyle" parent="InfoCardStyle">
        <item name="cardBackgroundColor">@color/color_green_card</item>
    </style>

    <style name="DeceasedCardStyle" parent="InfoCardStyle">
        <item name="cardBackgroundColor">@color/color_grey_card</item>
    </style>


    <style name="SortSheetSectionTitleStyle">
        <item name="fontFamily">@font/poppins_regular</item>
        <item name="android:textSize">@dimen/RegularFontSize</item>
        <item name="android:textColor">@color/color_text</item>
    </style>

    <style name="SortSheetItemStyle">
        <item name="buttonTint">@color/color_primary</item>
        <item name="fontFamily">@font/poppins_regular</item>
        <item name="android:textSize">@dimen/SmallFontSize</item>
        <item name="android:textColor">@color/color_text</item>
        <item name="android:minHeight">18sp</item>
    </style>


    <style name="IconImageStyle">
        <item name="android:layout_height">@dimen/IconSize</item>
        <item name="android:layout_width">@dimen/IconSize</item>
        <item name="android:background">@android:color/transparent</item>
    </style>


    <style name="AboutContentStyle" parent="SubHeadingTextStyle">
        <item name="fontFamily">@font/poppins_regular</item>
        <item name="android:textSize">@dimen/RegularFontSize</item>
    </style>

    <style name="DeveloperImageShape">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <style name="ShareAppButtonStyle" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="fontFamily">@font/poppins_bold</item>
        <item name="android:paddingStart">@dimen/PrimaryDimen</item>
        <item name="android:paddingEnd">@dimen/PrimaryDimen</item>
        <item name="android:paddingTop">@dimen/SmallDimen</item>
        <item name="android:paddingBottom">@dimen/SmallDimen</item>
        <item name="android:text">@string/ShareAppText</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">@dimen/MediumFontSize</item>
        <item name="android:textStyle">bold</item>
        <item name="cornerRadius">50dp</item>
        <item name="icon">@drawable/ic_share</item>
        <item name="iconPadding">8dp</item>
        <item name="strokeColor">@color/color_primary</item>
        <item name="strokeWidth">3dp</item>
    </style>

</resources>